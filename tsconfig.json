{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "preserve",
      "lib": ["dom", "es2017", "esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "esnext",
      "paths": {
        "*": ["node_modules"],
        "@App/*": ["app/src/*"],
        "@Config/*": ["config/*"],
        "@Server/*": ["server/src/*"]
      },
      "baseUrl": "./"
    }
  }
