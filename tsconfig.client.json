{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "preserve",
      "lib": ["dom", "es2017", "esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "esnext",
      "paths": {
        "*": ["node_modules", "app/types/*"],
        "config": ["src/config"]
      },
      "baseUrl": "./"
    },
    "include": [
      "src/app"
    ]
  }