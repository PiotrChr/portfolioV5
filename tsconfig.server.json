{
    "compilerOptions": {
      "target": "es5",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2017", "esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": false,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "server/dist",
      "removeComments": false,
      "skipLibCheck": true,
      "strict": true,
      "baseUrl": "./"
    },
    "include": [
      "server/src"
    ],
    "files": [
      "config/global.d.ts"
    ],
    "lib": [
      "es2015"
    ]
  }
